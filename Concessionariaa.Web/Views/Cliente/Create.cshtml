@model Conssecionaria.DATA.Models.Cliente

@{
    ViewData["Title"] = "Create";
}

<h1>Novo Cliente</h1>

<h4>Preencha os campos abaixo para adicionar um novo usuário</h4>
<hr />
<div>
    <a class="btn btn-primary" asp-action="Index">Voltar</a>
</div>
<br />
<div class="row">
    <div class="col-md">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cpf" class="control-label"></label>
                    <input asp-for="Cpf" class="form-control" />
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>
                <div class="card">
                    <div class="card-header">Endereço</div>
                    <div class="card-body" row>

                        <div class="col-md">
                            <div class="form-group">
                                <label asp-for="CliEndereco" class="control-label"></label>
                                <input asp-for="CliEndereco" class="form-control" />
                                <span asp-validation-for="CliEndereco" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CliCidade" class="control-label"></label>
                                <input asp-for="CliCidade" class="form-control" />
                                <span asp-validation-for="CliCidade" class="text-danger"></span>
                            </div>
                        </div>
                        <div class=" col-md">
                            <div class="form-group">
                                <label asp-for="CliBairro" class="control-label"></label>
                                <input asp-for="CliBairro" class="form-control" />
                                <span asp-validation-for="CliBairro" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CliNumero" class="control-label"></label>
                                <input asp-for="CliNumero" class="form-control" />
                                <span asp-validation-for="CliNumero" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Fone" class="control-label"></label>
                    <input asp-for="Fone" class="form-control" />
                    <span asp-validation-for="Fone" class="text-danger"></span>
                </div>

            <br />
            </div>
                <div class="form-group">
                    <input type="submit" value="Adicionar" class="btn btn-success" />
                </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
